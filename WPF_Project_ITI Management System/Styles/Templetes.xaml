<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:WPF_Project_ITI_Management_System.Views"
                    xmlns:viewmodel="clr-namespace:WPF_Project_ITI_Management_System.ViewModel">
    <!--To selected View
    Home view-->
    <DataTemplate DataType="{x:Type viewmodel:HomeViewModel}">
        <views:HomeView/>
    </DataTemplate>
    <!--Teacher view-->
    <DataTemplate DataType="{x:Type viewmodel:TeachersViewModel}">
        <views:TeachersView/>
    </DataTemplate>
    <!--Student view-->
    <DataTemplate DataType="{x:Type viewmodel:StudentsViewModel}">
        <views:StudentsView/>
    </DataTemplate>
    <!--Courses view-->
    <DataTemplate DataType="{x:Type viewmodel:CoursesViewModel}">
        <views:CoursesView/>
    </DataTemplate>
    <!--Calculator view-->
    <DataTemplate DataType="{x:Type viewmodel:CalculatorViewModel}">
        <views:CalculatorView/>
    </DataTemplate>
</ResourceDictionary>
    